<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tho.daa_moblie_client.Activities.MainActivity">

    <Button
        android:text="User_b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:id="@+id/btn_user_ver"
        android:layout_below="@+id/btn_user_mode"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="B1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_service_sig"
        android:layout_below="@+id/btn_user_mode"
        android:layout_alignStart="@+id/btn_user_ver"
        android:layout_marginTop="25dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/btn_Service_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Transparent"

        android:paddingLeft="30dp"
        android:paddingRight="40dp"
        android:shadowColor="@android:color/transparent"
        android:text="User Mode"
        android:textColor="@color/white"
        auto:buttonColor="@color/fbutton_color_midnight_blue"
        auto:shadowColor="@color/colorPrimary"
        shadowEnabled="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/btn_user_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Transparent"

        android:paddingLeft="30dp"
        android:paddingRight="40dp"
        android:shadowColor="@android:color/transparent"
        android:text="Service Mode"
        android:textColor="@color/white"
        auto:buttonColor="@color/fbutton_color_midnight_blue"
        auto:shadowColor="@color/colorPrimary"
        shadowEnabled="true"
        android:layout_below="@+id/btn_Service_mode"
        android:layout_alignParentStart="true" />


</RelativeLayout>
