<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_online"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.tho.daa_moblie_client.Activities.OnlineActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service name: "
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/txt_online_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <com.example.tho.daa_moblie_client.CheckBoxView.library.SmoothCheckBox
                android:id="@+id/cb_s1"
                android:layout_gravity="center_vertical|left"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:paddingTop="10dp"
                app:color_checked="#149A45"
                />

            <TextView
                android:layout_weight="100"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Get service signature"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <com.example.tho.daa_moblie_client.CheckBoxView.library.SmoothCheckBox
                android:id="@+id/cb_s2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:paddingTop="10dp"
                app:color_checked="#149A45"
                />

            <TextView
                android:layout_weight="100"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Verify serivce permission"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <com.example.tho.daa_moblie_client.CheckBoxView.library.SmoothCheckBox
                android:id="@+id/cb_s3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:paddingTop="10dp"
                app:color_checked="#149A45"
                />

            <TextView
                android:layout_weight="100"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Send signature to service"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <com.example.tho.daa_moblie_client.CheckBoxView.library.SmoothCheckBox
                android:id="@+id/cbs4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:paddingTop="10dp"
                app:color_checked="#149A45"
                />

            <TextView
                android:layout_weight="100"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Complete"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

        </LinearLayout>



    </LinearLayout>






</LinearLayout>
